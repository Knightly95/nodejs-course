extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")

block content
    main
        if products.length
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2015/06/02/12/59/narrative-794978_960_720.jpg", alt="book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Ullam, at earum perferendis magni placeat pariatur repellendus odio atque explicabo in cumque, iusto, sed iure dolorum temporibus excepturi unde doloremque repellat.
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 no products